{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "declaration": false,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "assets",
    "layouts",
    "pages",
    "public",
    "plugins",
    "*.json"
  ]
}
